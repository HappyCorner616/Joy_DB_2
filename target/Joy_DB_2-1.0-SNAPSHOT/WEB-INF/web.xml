<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    
    <servlet>
        <servlet-name>SchemaApi</servlet-name>
        <servlet-class>servlets.SchemaApi</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TableApi</servlet-name>
        <servlet-class>servlets.TableApi</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RowApi</servlet-name>
        <servlet-class>servlets.RowApi</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SchemaApi</servlet-name>
        <url-pattern>/Schema</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TableApi</servlet-name>
        <url-pattern>/Table</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RowApi</servlet-name>
        <url-pattern>/Row</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <resource-ref>
        <res-ref-name>jdbc/_MySQLSchemas</res-ref-name>
        <res-type>java.net.URL</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
